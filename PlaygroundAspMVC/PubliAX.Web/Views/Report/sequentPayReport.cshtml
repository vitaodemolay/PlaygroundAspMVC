@model IEnumerable<PubliAX.Web.Models.Report.PgtoConsecutivoViewModel>

@{
    ViewBag.Title = "sequentPayReport";
    Layout = "~/Views/Shared/_LayoutGentelella.cshtml";
    DateTime _date = Convert.ToDateTime(ViewBag.Ref);
}

<h2>Relatório de Pagamentos Consecutivos</h2>

<hr />
<div id="panelInitial" class="panel panel-default">
    <div class="panel-heading">
        <div class="col-xs-4 col-md-2" style="padding-top:10px">
            <strong>Mês Ref: @_date.ToString("MM/yyyy")</strong>
        </div>
        <div class="col-xs-offset-9 col-md-offset-9">
            <a href="~/Report/sequentPay" class="btn btn-primary">Voltar</a>
            @if (Model != null && Model.Count() > 0)
            {
                <a href="@Url.Action("ExportToExcel", "Report", new { date = _date })" class="btn btn-success">Exportar</a>
            }
        </div>
    </div>
    <div class="panel-body">
        <table id="table-pagtos" class="table table-striped table-bordered" cellspacing="0" width="100%">
            <thead>
                <tr>
                    <th>
                        <label>CNPJ / CPF</label>
                    </th>
                    <th>
                        <label>Promotor</label>
                    </th>
                    <th>
                        <label>Pgtos Consecutivos em</label>
                    </th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @item.CNPJ
                            </td>
                            <td>
                                @item.FORNECEDOR
                            </td>
                            <td>
                                @item.PG_CONSEC
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>
</div>


@section Scripts {
    @Scripts.Render("~/bundles/jqDataTable")
    <script>
        $(document).ready(function () {
            $('#table-pagtos').DataTable();
        });
    </script>
}
