@model IEnumerable<PubliAX.Domain.DTO.UserDto>

@{
    ViewBag.Title = "listUser";
    Layout = "~/Views/Shared/_LayoutGentelella.cshtml";
}

<h2>Usuários</h2>

<table id="table-user" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                Login
            </th>
            <th>
                Nome
            </th>
            <th>
                Email
            </th>
            <th>
                Celular
            </th>
            <th>
                CPF / CNPJ
            </th>
            <th>
                Data de Registro
            </th>
            <th>
                Ultima alteração
            </th>
            <th>
                Ultimo Logon
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.login)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.celphone)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.cnpfj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.registerdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastchange)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastlogon)
                </td>
                <td>
                    @if (item.status == PubliAX.Domain.Enum.entityStatus.blocked || item.status == PubliAX.Domain.Enum.entityStatus.disable)
                    {
                        @Html.ActionLink("Desbloquear", "changeStatus", new { userId = item.userId, status = PubliAX.Domain.Enum.entityStatus.enable})
                    }
                    else
                    {
                        @Html.ActionLink("Bloquear", "changeStatus", new { userId = item.userId, status = PubliAX.Domain.Enum.entityStatus.disable })
                    } |

                    @Html.ActionLink("Editar", "userManager", new { userId = item.userId }) |

                    @Html.ActionLink("Delete", "delete", new { userId = item.userId })
                </td>
            </tr>
        }
    </tbody>

</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqDataTable")
    <script>
        $(document).ready(function () {
            $('#table-user').DataTable();
        });
    </script>
}
