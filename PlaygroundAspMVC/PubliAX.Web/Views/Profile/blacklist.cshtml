@model IEnumerable<PubliAX.Domain.DTO.BlockedPersonDto>

@{
    ViewBag.Title = "blacklist";
    Layout = "~/Views/Shared/_LayoutGentelella.cshtml";
}

<h2>Lista Negra de Pessoas</h2>

<p>
    @Html.ActionLink("Novo Bloqueio", "createBlock")
</p>

<table id="table-block" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                CPF / CNPJ / Email
            </th>
            <th>
                Data de Registro
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.value)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.registerdate)
                </td>
                <td>
                    @Html.ActionLink("Delete", "deleteBlock", new { blockId = item.blockedId })
                </td>
            </tr>
        }
    </tbody>
</table>



@section Scripts {
    @Scripts.Render("~/bundles/jqDataTable")
    <script>
        $(document).ready(function () {
            $('#table-block').DataTable();
        });
    </script>
}