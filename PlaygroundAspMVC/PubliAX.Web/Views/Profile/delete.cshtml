@model PubliAX.Domain.DTO.UserDto

@{
    ViewBag.Title = "delete";
    Layout = "~/Views/Shared/_LayoutGentelella.cshtml";
}

<h3>Você tem certeza que deseja deletar este usuário?</h3>
<hr />
<div>
    <h3>@Model.name</h3>
    <dl class="dl-horizontal">
        <dt>
            Login:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.login)
        </dd>

        <dt>
            Email:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.email)
        </dd>

        <dt>
            Celular:
        </dt>

        <dd>
            @Html.DisplayFor(model => model.celphone)
        </dd>

        <dt>
            @if (Model.type == PubliAX.Domain.Enum.personType.business)
            {
                <span>CNPJ:</span>
            }
            else
            {
                <span>CPF:</span>
            }
        </dt>

        <dd>
            @Html.DisplayFor(model => model.cnpfj)
        </dd>

        <dt>
            Ultimo Login
        </dt>

        <dd>
            @Html.DisplayFor(model => model.lastlogon)
        </dd>

    </dl>

    @using (Html.BeginForm("deletePost", "Profile", new { userId = Model.userId }, FormMethod.Post))
    {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color">
            <a href="@Url.Action("listUser")" class="btn btn-primary">Voltar</a>
            <input type="submit" value="Deletar" class="btn btn-danger" />
        </div>
    }
</div>
