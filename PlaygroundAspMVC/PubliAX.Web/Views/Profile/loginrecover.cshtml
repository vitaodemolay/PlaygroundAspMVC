@model PubliAX.Web.Models.Profile.recoverLoginViewModel

@{
    ViewBag.Title = "loginrecover";
    Layout = "~/Views/Shared/_LayoutProfile.cshtml";
}

<div class="container">
    <div class="col-xs-12 col-lg-4"></div>
    <div class="col-xs-12 col-lg-5">
        <div class="jumbotron" style="margin-top:150px; border:0.5px solid #000000;">
            <div class="text-center" style="margin-bottom:30px;">
                <h2>Recuperação de Login</h2>
            </div>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <div class="form-group">
                        <label class="control-label col-md-3">Email</label>
                        <div class="col-md-9">
                            @Html.EditorFor(model => model.email, new { htmlAttributes = new { @class = "form-control", placeholder = "Email" } })
                            @Html.ValidationMessageFor(model => model.email, "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group" style="margin-top:30px">
                        <div class="col-md-offset-3 col-md-6">
                            <button type="submit" class="btn btn-primary form-control">Enviar</button>
                        </div>
                    </div>
                </div>
            }

            <div class="text-center">
                @Html.ActionLink("[ Voltar ]", "signin")
            </div>

        </div>
    </div>
    <div class="col-xs-12 col-lg-5"></div>
    <div class="col-xs-12 col-lg-3"></div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
