@model IEnumerable<PubliAX.Domain.DTO.InviteDto>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGentelella.cshtml";
}

<h2>Convite Feitos</h2>

<p>
    <strong><a href="@Url.Action("Create")" class="btn btn-success">Novo Convite</a></strong>
</p>
<table id="table-invites" class="table table-striped table-bordered" cellspacing="0" width="100%">
    <thead>
        <tr>
            <th>
                <label>Email Convidado</label>
            </th>
            <th>
                <label>Token de Validação</label>
            </th>
            <th>
                <label>Data Expiração</label>
            </th>
            <th>
                <label>Data de Registro</label>
            </th>
            <th>
                <label>Ultima Alteração</label>
            </th>
            <th>
                <label>Teste</label>
            </th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.token)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.expiration)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.registerdate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.lastchange)
                </td>
                <td>
                    @Html.ActionLink("Revalidar", "Edit", new { id = item.inviteId }) |
                    @Html.ActionLink("Remover", "Delete", new { id = item.inviteId }) |
                    @Html.ActionLink("Reenviar", "Resend", new { id = item.inviteId })
                </td>
            </tr>
        }
    </tbody>
</table>


@section Scripts {
    @Scripts.Render("~/bundles/jqDataTable")
    <script>
        $(document).ready(function () {
            $('#table-invites').DataTable();
        });
    </script>
}