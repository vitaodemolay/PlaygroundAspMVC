
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_LayoutGentelella.cshtml";

    PubliAX.Domain.DTO.UserDto loginUser = User.Identity.IsAuthenticated ? ViewData["LoginUser"] as PubliAX.Domain.DTO.UserDto : null;

}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Home</h2>
        </div>
    </div>
    <hr />
    <div class="row">
        <div class="col-md-12">
            <span>Olá @loginUser.name ...</span>
            <p>
                <span>Seja bem Vindo(a)!</span>
            </p>
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @{ 
                if (loginUser != null &&  !loginUser.emailchecked)
                {
                    <a href="~/Home/CheckEmail"><strong>Seu email '@loginUser.email' ainda não foi validado, click aqui para realizar a validação!</strong></a>
                }
            }
        </div>
    </div>

    <div class="row">
        <div class="col-md-12">
            @{
                if (loginUser != null &&  loginUser.codforn < 0)
                {
                    <a href="~/Prov/Relate"><strong>Seu usuário ainda não foi relacionado a um Fornecedor, click aqui para cadastrar!</strong></a>
                }
            }
        </div>
    </div>
</div>



